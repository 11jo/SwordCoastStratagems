IF
	Allegiance(Myself,ENEMY)
	!Global("DMWWC3TentHostile","GLOBAL",1)
THEN
	RESPONSE #100
		SetGlobal("DMWWC3TentHostile","GLOBAL",1)
END

IF 
	!Allegiance(Myself,ENEMY)
	Global("DMWWC3TentHostile","GLOBAL",1)
THEN
	RESPONSE #100
		Enemy()
END

IF
  Global("DMWWC3TentHostile","GLOBAL",1)
  !Detect(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    MoveToObject(Player1)
END


