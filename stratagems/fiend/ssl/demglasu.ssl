//////////////////////////////////////////////////////////////////////////////////////
///	Use offensive magic
//////////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////
////  Power Word: Stun
/////////////////////////////////////////////////////////////////////////

IF TRIGGER
	Target([0.0.0.MAGE_ALL])
	Target([0.0.0.CLERIC_ALL])
	Target([0.0.0.BARD])
	Target([0.0.0.DRUID_ALL])
	TriggerBlock(MR|SpellTurnNew|Stun|Helpless|SIEnchantment)
	OR(3)
		HPPercentLT(scstarget,60)
		Class(scstarget,MAGE)
		Class(scstarget,MAGE_THIEF)
THEN DO
	Action(SpellNoDec,WIZARD_POWER_WORD_STUN|100|100)
END

////////////////////////////////////////////////////////////////////////////////////
///	Unholy Blight
//////////////////////////////////////////////////////////////////////////////////////

IF TRIGGER
	Target([ANYONE])
	TriggerBlock(Enemy)
THEN DO
	Action(SpellNoDec,CLERIC_UNHOLY_BLIGHT|200|100)
END

