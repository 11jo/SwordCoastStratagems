IF TRIGGER
	IgnoreBlock(IsAzamantes)
	RequireBlock(HasL9)
	See(NearestEnemyOf(Myself))
	!CheckStatGT(Myself,0,WIZARD_IMPROVED_ALACRITY)
THEN DO
	Action(SpellMyselfRESReplace,"dw#qalac",WIZARD_IMPROVED_ALUCRITY|100|50)
END

