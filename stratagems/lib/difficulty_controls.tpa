              REPLACE_EVALUATE "[^0-9]*\([0-9]+\)[^0-9]*\([0-9]+\)[^0-9]*\([0-9]+\)[^0-9]*\([0-9]+\)[^0-9]*"
              BEGIN
                feedback_xloc="%MATCH1%"
                feedback_yloc="%MATCH2%"
