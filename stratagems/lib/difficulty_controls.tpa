              BEGIN
                keys_xloc="%MATCH1%"
                keys_yloc="%MATCH2%"
                keys_width="%MATCH3%"
                keys_height="%MATCH4%"
              END
              ""
           END
           ACTION_IF !(keys_xloc=feedback_xloc) || !(keys_width=feedback_width) BEGIN
              OUTER_SET abort=1 // in this case the setup is too different from what we're used to
           END
           OUTER_SET delta=feedback_yloc - keys_yloc
           OUTER_SET new_yloc=keys_yloc - delta
           OUTER_SPRINT area_string "%feedback_xloc% %new_yloc% %feedback_width% %feedback_height%"

           // make the patch
           
        ACTION_IF !abort BEGIN

           // main changes

