//////////////////////////////////////////////////////////////////////
///	Renew my own defensive magics
//////////////////////////////////////////////////////////////////////



IF TRIGGER
	IgnoreBlock(IsDruid)
	RequireBlock(HasL6)
	!CheckStatGT(Myself,0,CLERIC_BLADE_BARRIER)
	GlobalTimerExpired("redefend","LOCALS")
	Range(NearestEnemyOf(Myself),10)
THEN DO
	Action(SpellMyself,NPC_BLADE_BARRIER|100|50)
END

