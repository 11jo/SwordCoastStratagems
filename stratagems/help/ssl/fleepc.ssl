IF
        RequireBlock(IsEnhancedEdition)
        See([PC])
        GlobalTimerNotExpired("runfromPC","LOCALS")
THEN
    RESPONSE #100
         RunAwayFromNoLeaveArea([PC],150)
END

IF
        IgnoreBlock(IsEnhancedEdition)
        See([PC])
        GlobalTimerNotExpired("runfromPC","LOCALS")
THEN
    RESPONSE #100
         RunAwayFrom([PC],150)
END