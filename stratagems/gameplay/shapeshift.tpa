//////////////////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////////
////  The main token-making block
//////////////////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////////
DEFINE_ACTION_FUNCTION shapeshift_token_main BEGIN

  COPY - ~.../stratagems-inline/shapeshift_data~ ~.../stratagems-inline~
    READ_2DA_ENTRIES_NOW shapeshift_data 0
    COUNT_2DA_COLS col_num
    FOR (i=1;i<shapeshift_data;i=i+1) BEGIN
       READ_2DA_ENTRY_FORMER shapeshift_data i 0 filename
       // read in variables
       SPRINT arguments ~~
       FOR (j=1;j<col_num;j=j+1) BEGIN
          READ_2DA_ENTRY_FORMER shapeshift_data 0 j var
          READ_2DA_ENTRY_FORMER shapeshift_data i j temp
          SPRINT arguments ~%arguments% %var%=>%temp%~
       END
       // make item
       INNER_ACTION BEGIN
          LAF make_item STR_VAR item=EVALUATE_BUFFER ~%filename%~
                             editstring=EVALUATE_BUFFER ~token_core=>%tilde%%arguments%%tilde%~
          END
       END

    END


END

//////////////////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////////
////  patch used by token-making block
//////////////////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////////

DEFINE_PATCH_FUNCTION token_core
                      STR_VAR arguments=""
BEGIN
     SET to_hit=0
     SET damage=0
     SET AC=10
     SET strength=0
     SET str_ex=0
     SET dexterity=0
     SET MR=0
     SET damage_type=3 // slashing is default
     SET num_dice=1
     SET dice_size=0
     SET attacks=~-1~
     SET movement_mod=100
     WHILE ~%arguments%~ STRING_COMPARE_CASE ~~ BEGIN
        LPF return_first_pair STR_VAR list=EVALUATE_BUFFER ~%arguments%~ RET var=key value=value arguments=list END
        SPRINT EVALUATE_BUFFER ~%var%~ ~%value%~
     END
     PATCH_CLEAR_ARRAY core_ability_data
     PATCH_DEFINE_ASSOCIATIVE_ARRAY core_ability_data BEGIN
          type=>ability
          ability_type=>1
          ability_icon=>~%icon%~
          ability_icon_loc=>1
          ability_target=>1
          ability_range=>1
          projectile=>1
          overhand=>50
          backhand=>50
          when_drained=>1
          strength_bonus=>1
          to_hit=>~%to_hit%~
          damage_bonus=>~%damage%~
          damage_type=>~%damage_type%~
          speed=>~%speed%~
          ability_numdice=>~%num_dice%~
          ability_dicesize=>~%dice_size%~
     END
     PATCH_CLEAR_ARRAY patch_data
     PATCH_DEFINE_ASSOCIATIVE_ARRAY patch_data BEGIN
        icon=>~%icon%~
        say_both_names=> ~%name_code%~
        say_both_descriptions=>~%desc_code%~
        droppable=>1
        magical=>1
        not_copyable=>1
        displayable=>1
        category=>16
        unusable_cleric=>1
        unusable_fighter=>1
        unusable_paladin=>1
        unusable_ranger=>1
        unusable_mage=>1
        unusable_bard=>1
        unusable_thief=>1
        unusable_fighter_mage=>1
        unusable_fighter_cleric=>1
        unusable_fighter_thief=>1
        unusable_fighter_mage_thief=>1
        unusable_cleric_mage=>1
        unusable_cleric_thief=>1
        unusable_mage_thief=>1

        icon_ground=>gward01
        icon_carried=>cmisc6p
        enchantment=>~%enchantment%~
        add_entry => core_ability_data
        quick_equipped_effect=>~opcode=>233 parameter1=>1 parameter2=>96~
        quick_equipped_effect'=>~opcode=>0 parameter1=>"%AC%" parameter2=>0x10~
        quick_equipped_effect''=>~opcode=>53 parameter1=>%animation%~ // animation
        quick_equipped_effect'''=>~opcode=>145 parameter2=>0~ // no spells
        quick_equipped_effect''''=>~opcode=>145 parameter2=>1~ // no spells
        add_equipped_effect_inline=>~opcode=>215 target=>1 duration=>1 resource=>SPPOLYMP~ // swirly lights on start
     END
     PATCH_IF !(movement_mod=100) BEGIN
         SPRINT $patch_data(quick_equipped_effect''''') ~opcode=>126 parameter1=>%movement_mod% parameter2=>2~
     END
     PATCH_IF ~dexterity~>0 BEGIN
         SPRINT $patch_data(quick_equipped_effect'''''') ~opcode=>15 parameter2=>1 parameter1=>%dexterity%~
     END
     PATCH_IF ~strength~>0 BEGIN
         SPRINT $patch_data(quick_equipped_effect''''''') ~opcode=>44 parameter2=>1 parameter1=>%strength%~
         SPRINT $patch_data(quick_equipped_effect'''''''') ~opcode=>97 parameter2=>1 parameter1=>%str_ex%~
     END
     PATCH_IF ~MR~>0 BEGIN
         SPRINT $patch_data(quick_equipped_effect''''''''') ~opcode=>166  parameter1=>%MR%~
         SPRINT $patch_data(quick_equipped_effect'''''''''') ~opcode=>142 parameter2=>63~
     END
     PATCH_IF !(attacks = ~-1~) BEGIN
         SPRINT $patch_data(quick_equipped_effect''''''''''') ~opcode=>1 parameter1=>%attacks% parameter2=>1~
     END
     LPF apply_patches STR_VAR arguments=patch_data file_prefix=ITM END
END

