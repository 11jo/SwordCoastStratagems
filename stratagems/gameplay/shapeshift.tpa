DEFINE_ACTION_FUNCTION shapeshift_token_enemies BEGIN

   ACTION_DEFINE_ASSOCIATIVE_ARRAY shapeshift_enemy BEGIN
      ear=>nea
      fir=>nfi
      sal=>nsa
      wyv=>nwy
      spi=>nsp
      we1=>nw1
      we2=>nw2
      we3=>nw3
      brp=>nbr
      wol=>nwo
   END

   ACTION_PHP_EACH shapeshift_enemy AS old=>new BEGIN
     LAF clone_item STR_VAR item=EVALUATE_BUFFER ~dw#sh%old% => dw#sh%new%~
                            editstring=~droppable=>0 delete_opcodes=>145~
     END
   END


END

//////////////////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////////
////  The main spell-making block
//////////////////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////////

DEFINE_ACTION_FUNCTION shapeshift_spells BEGIN


    OUTER_SPRINT name @13100
    LAF install STR_VAR files=dw#shw1.spl END
    LAF edit_spell STR_VAR spell=dw#shw1 editstring=EVALUATE_BUFFER ~set_name=>"%name%"~ END


   COPY - ~.../stratagems-inline/shapeshift_spells.2da~ ~.../stratagems-inline~
        READ_2DA_ENTRIES_NOW shapeshift_spells 0
        COUNT_2DA_COLS col_num
        FOR (i=1;i<shapeshift_spells;i=i+1) BEGIN
           FOR (j=0;j<col_num;j=j+1) BEGIN
              READ_2DA_ENTRY_FORMER shapeshift_spells 0 j var
              READ_2DA_ENTRY_FORMER shapeshift_spells i j temp
              SPRINT EVALUATE_BUFFER ~%var%~ ~%temp%~
           END
           INNER_ACTION BEGIN
             LAF make_shapeshift_spell STR_VAR spellname  stringsource resource icon END
           END
        END
   BUT_ONLY

   LAF edit_spell STR_VAR spell=sppr731 editstring=~say_description=>13150~ allow_missing=yes END
   LAF edit_spell STR_VAR spell=sppr732 editstring=~say_description=>13151~ allow_missing=yes END


END


//////////////////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////////
////  used to make individual spell
//////////////////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////////

DEFINE_ACTION_FUNCTION make_shapeshift_spell
   STR_VAR stringsource=""
           spellname=""
           resource=""
           icon=""
BEGIN
   ACTION_IF FILE_EXISTS ~%stringsource%.spl~ BEGIN
      COPY_EXISTING ~%stringsource%.spl~ ~override~
         LPF CRE_read_name1_string RET stringcode=value END
      BUT_ONLY
      LAF clone_spell STR_VAR spell=EVALUATE_BUFFER ~dw#shw1=>%spellname%~
                          editstring=EVALUATE_BUFFER ~name1_string=>%stringcode% literal=>"WRITE_ASCIIE 0xae %resource% (8) WRITE_ASCIIE 0x76 %icon%"~
      END

   END
END

//////////////////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////////
////  used to make classfiles
//////////////////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////////

DEFINE_ACTION_FUNCTION shapeshift_classfiles BEGIN
      COPY_EXISTING_REGEXP ~clabdr.*\.2da~ ~override~
	REPLACE_TEXTUALLY CASE_INSENSITIVE ~GA_SPCL613~ ~****~


   COPY_EXISTING ~clabdr03.2da~ ~override~
	REPLACE_TEXTUALLY CASE_INSENSITIVE ~GA_SPCL643~ ~****~
	REPLACE_TEXTUALLY CASE_INSENSITIVE ~GA_SPCL644~ ~****~
	SET_2DA_ENTRY 1 1 5 ~GA_DW#SHW1~
	SET_2DA_ENTRY 1 7 5 ~GA_DW#SHW2~
	SET_2DA_ENTRY 1 13 5 ~GA_DW#SHW3~

   COPY_EXISTING_REGEXP ~lu.*\.2da~ ~override~ // we allow for possible extra druid kits
     COUNT_2DA_ROWS 9 ~rowcount~
     FOR (i=0;i<~rowcount~;i=i+1) BEGIN
	  READ_2DA_ENTRY i 1 9 ~abcheck~
	  PATCH_IF ~%abcheck%~ STRING_EQUAL_CASE ~GA_SPPR731~ BEGIN
	     SET_2DA_ENTRY i 1 9 ~AP_SPPR731~
	     SET_2DA_ENTRY i 6 9 ~1~
	  END
	  PATCH_IF ~%abcheck%~ STRING_EQUAL_CASE ~GA_SPPR732~ BEGIN
	     SET_2DA_ENTRY i 1 9 ~AP_SPPR732~
	     SET_2DA_ENTRY i 6 9 ~1~
	  END
     END
   BUT_ONLY
END

