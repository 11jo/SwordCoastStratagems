//////////////////////////////////////////////////////////////////////////////////////
///	Nabassu combat script
//////////////////////////////////////////////////////////////////////////////////////

INCLUDE FILE(%scsroot%/fiend/ssl/initial.ssl)  // rest-and-recover, mill in confusion, etc.

//////////////////////////////////////////////////////////////////////////////////////
///	Gate
//////////////////////////////////////////////////////////////////////////////////////


IF
	Allegiance(Myself,ENEMY)
	Delay(6)
	!GlobalTimerNotExpired("castspell","LOCALS")
	OR(2)
		NumCreatureLT([ENEMY.0.DEMONIC],3)
		NumCreatureVsPartyLT([ENEMY.0.DEMONIC],0)
	!GlobalGT("gated","LOCALS",2)
	!Range(NearestEnemyOf(Myself),10)
	OR(2)
		NumInPartyAliveGT(2)
		DifficultyGT(EASY)
THEN
	RESPONSE #100
		SetGlobalTimer("castspell","LOCALS",6)
		IncrementGlobal("gated","LOCALS",1)
		ForceSpellRES("GATE2",Myself) // Gate
	RESPONSE #100
		Continue()
END

