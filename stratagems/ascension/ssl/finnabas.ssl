	RESPONSE #scsprob1
		SetGlobalTimer("castspell","LOCALS",6)
		SpellNoDec(scstarget,scsargument1)
		ForceSpell(NearestEnemyOf(Myself),TANARI_DEATH_GAZE)
	RESPONSE #scsprob1
