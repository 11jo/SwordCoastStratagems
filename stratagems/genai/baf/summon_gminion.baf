IF
    Allegiance(LastSummonerOf(Myself),GOODCUTOFF)
    HaveAnySpells()
THEN
    RESPONSE #100
        ChangeAIScript("",OVERRIDE)
        ChangeAIScript("gMinionS",CLASS)
        ChangeAIScript("",RACE)
        ChangeAIScript("",GENERAL)
        ChangeAIScript("",DEFAULT)
END

