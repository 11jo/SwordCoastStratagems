//////////////////////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////////////
////	Dominating gaze
//////////////////////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////////////

//////////////////////////////////////////////////////////////////////////

BEGIN LOOP(scscharmcheck||GlobalTimerNotExpired("seeimmune","LOCALS");TriggerBlock(Charm)&!GlobalTimerNotExpired("seeimmune","LOCALS")&CheckStatGT(scstarget,0,SAVEVSSPELL))

/////////////////////////////////////////////////////////////////////////
//	Top priority: clerics and people with undead-slaying weapons
/////////////////////////////////////////////////////////////////////////

IF TRIGGER
	scscharmcheck
	TargetBlock(PlayersInOrder)
	TriggerBlock(MR|SIEnchantment|SpellTurn|Enemy|Helpless)
	OR(4)
		Class(scstarget,CLERIC_ALL)
		HasItem("blun12",scstarget)
		HasItem("blun25",scstarget)
		HasItem("ax1h10",scstarget)
THEN DO
	Action(ForceSpell,VAMPIRE_DOMINATION|150|100)
END

/////////////////////////////////////////////////////////////////////////
//	Then try for anyone you can get
/////////////////////////////////////////////////////////////////////////

IF TRIGGER
	scscharmcheck
	ConditionalTargetBlock(PCsPreferringStrong;!CheckStatGT(scstarget,50,RESISTMAGIC))
	TargetBlock(PCsPreferringStrong)
	TriggerBlock(MR|SIEnchantment|SpellTurn|Enemy|Helpless)
THEN DO
	Action(ForceSpell,VAMPIRE_DOMINATION|100|100)
END

END LOOP


